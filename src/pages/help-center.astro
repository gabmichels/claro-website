---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-screen bg-[#d9e6c6] p-4">
    <h1 class="text-3xl font-normal mb-4 text-center">Redirecting to Help Center...</h1>
    <p class="text-lg mb-8 text-center">If you're not redirected automatically, please click the button below:</p>
    <a href="https://claro-ai.tawk.help/" class="btn-primary">Go to Help Center</a>
  </div>
</Layout>

<script>
  // Redirect after a short delay to allow the page to render
  setTimeout(() => {
    window.location.href = "https://claro-ai.tawk.help/";
  }, 1500);
</script> 