---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Thank You | Claro AI">
  <Header />
  <main>
    <section class="thank-you-section">
      <div class="container">
        <h1>Thank You!</h1>
        <p>Your message has been sent successfully. We will get back to you as soon as possible.</p>
        <div class="buttons">
          <a href="/" class="btn-primary">Back to Home</a>
          <a href="#download" class="btn-secondary">Download Claro</a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .thank-you-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    background-color: #f8f9fa;
    text-align: center;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: #4a7c59;
  }
  
  p {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    color: #555;
  }
  
  .buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .btn-primary, .btn-secondary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .btn-primary {
    background-color: #4a7c59;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #3d6449;
  }
  
  .btn-secondary {
    background-color: transparent;
    border: 2px solid #4a7c59;
    color: #4a7c59;
  }
  
  .btn-secondary:hover {
    background-color: rgba(74, 124, 89, 0.1);
  }
  
  @media (max-width: 768px) {
    .thank-you-section {
      padding: 3rem 1.5rem;
    }
    
    h1 {
      font-size: 2.5rem;
    }
    
    .buttons {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
  }
</style> 