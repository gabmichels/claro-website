---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Product Updates - Claro">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Product Updates</h1>
    
    <div class="space-y-12">
      <!-- Version 1.0.0 -->
      <article class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-semibold">Version 1.0.0</h2>
          <span class="text-sm text-gray-500">Initial Release</span>
        </div>
        
        <div class="prose max-w-none">
          <p class="text-lg mb-4">Welcome to the maiden release of Claro 🎉</p>
          <p class="mb-4">This is just the beginning — thank you for being here from Day 1.</p>
          <p class="mb-4">Start a conversation, try the 24h Premium trial, or sign up for bonuses.</p>
          <p>We're excited to grow Claro with you 🌍✨</p>
        </div>
      </article>
    </div>
  </main>
</BaseLayout>

<style>
  .prose {
    line-height: 1.6;
  }
</style> 