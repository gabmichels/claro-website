---
import { Image } from 'astro:assets';
import claroLogo from '../assets/images/logo/claro_text_logo@4x.png';
---

<header class="bg-[#d9e6c6] py-4">
  <div class="container-custom flex justify-between items-center">
    <a href="/" class="flex items-center">
      <Image 
        src={claroLogo} 
        alt="Claro Logo" 
        width={110} 
        height={40} 
        class="h-10 w-auto"
      />
    </a>
    
    <nav class="hidden md:flex items-center space-x-8">
      <a href="/features" class="text-slate-800 hover:text-slate-600">Features</a>
      <a href="/how-it-works" class="text-slate-800 hover:text-slate-600">How It Works</a>
      <a href="/faq" class="text-slate-800 hover:text-slate-600">FAQs</a>
      <a href="https://claro-ai.tawk.help/" target="_blank" class="text-slate-800 hover:text-slate-600">Help Center</a>
    </nav>
    
    <div>
      <a href="/download" class="btn-primary">Download</a>
    </div>
    
    <!-- Mobile menu button -->
    <button id="mobile-menu-button" class="md:hidden text-slate-800">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile menu (hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/features" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">Features</a>
      <a href="/how-it-works" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">How It Works</a>
      <a href="/faq" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">FAQs</a>
      <a href="/about" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">About Us</a>
      <a href="https://claro-ai.tawk.help/" target="_blank" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">Help Center</a>
      <a href="/download" class="block px-3 py-2 text-slate-800 hover:bg-[#c6d6b1]">Download</a>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script> 